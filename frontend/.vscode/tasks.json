{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "npm: dev",
        "type": "npm",
        "script": "dev",
        "path": ".",
        "isBackground": true,
        "problemMatcher": {
          "owner": "vite",
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*starting dev server.*",
            "endsPattern": ".*Local:.*http://localhost:5173.*"
          }
        }
      },
      {
        "label": "Terminate npm: dev",
        "type": "process",
        "command": "pkill",
        "args": ["-f", "vite"],
        "problemMatcher": []
      }
    ]
  }
  